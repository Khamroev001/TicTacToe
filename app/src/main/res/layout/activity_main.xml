<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tortburchak_1"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="20dp"
        android:background="@drawable/xo_board"
        android:orientation="vertical"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout style="@style/row">

            <ImageButton
                android:id="@+id/img0"
                style="@style/column"
                android:paddingTop="15dp"
                android:scaleType="fitCenter"
                android:tag="0" />

            <View style="@style/verticalLine" />

            <ImageButton
                android:id="@+id/img1"
                style="@style/column"
                android:paddingTop="15dp"
                android:scaleType="fitCenter"
                android:tag="1" />

            <View style="@style/verticalLine" />

            <ImageButton
                android:id="@+id/img2"
                style="@style/column"
                android:paddingTop="15dp"
                android:scaleType="fitCenter"
                android:tag="2" />
        </LinearLayout>

        <View style="@style/horizontalLine" />

        <LinearLayout style="@style/row">

            <ImageButton
                android:id="@+id/img3"
                style="@style/column"
                android:paddingTop="15dp"
                android:scaleType="fitCenter"
                android:tag="3" />

            <View style="@style/verticalLine" />

            <ImageButton
                android:id="@+id/img4"
                style="@style/column"
                android:paddingTop="15dp"
                android:scaleType="fitCenter"
                android:tag="4" />

            <View style="@style/verticalLine" />

            <ImageButton
                android:id="@+id/img5"
                style="@style/column"
                android:paddingTop="15dp"
                android:scaleType="fitCenter"
                android:tag="5" />
        </LinearLayout>

        <View style="@style/horizontalLine" />

        <LinearLayout style="@style/row">

            <ImageButton
                android:id="@+id/img6"
                style="@style/column"
                android:paddingTop="15dp"
                android:scaleType="fitCenter"
                android:tag="6" />

            <View style="@style/verticalLine" />

            <ImageButton
                android:id="@+id/img7"
                style="@style/column"
                android:paddingTop="15dp"
                android:scaleType="fitCenter"
                android:tag="7" />

            <View style="@style/verticalLine" />

            <ImageButton
                android:id="@+id/img8"
                style="@style/column"
                android:paddingTop="15dp"
                android:scaleType="fitCenter"
                android:tag="8" />
        </LinearLayout>


    </LinearLayout>

    <ImageView
        android:id="@+id/restart"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:background="@drawable/circle"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        android:src="@drawable/restart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/button" />

    <TextView
        android:id="@+id/active_player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player X"
        android:textColor="#3cdceb"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/winner"
        style="@style/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text=""
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Score"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/linearLayout" />

    <LinearLayout
        android:id="@+id/score_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:weightSum="100"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/score">

        <LinearLayout
            android:id="@+id/first_score"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="49"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Harry"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/player1_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_marginTop="18sp"
            android:layout_marginBottom="8dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/second_score"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="49"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/player2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Silli"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/player2_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="30sp" />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>